<included>
    <property scope="system" name="gslog.timestamp" value="${gslog.timestamp}"/>

    <appender name="gslog.fileAppender" class="ch.qos.logback.core.FileAppender">
        <file>${gslog.absoluteFilename}${gslog.filenameSuffix}</file>
        <encoder>
            <pattern>${gslog.pattern}</pattern>
        </encoder>
    </appender>
    <appender name="gslog.errorFileAppender" class="ch.qos.logback.core.FileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>warn</level>
        </filter>
        <file>${gslog.absoluteFilename}${gslog.errorFilenameSuffix}</file>
        <encoder>
            <pattern>${gslog.pattern}</pattern>
        </encoder>
    </appender>

</included>




