<included scan='true' scanPeriod='500'>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
    <appender name="FILE1" class="ch.qos.logback.core.FileAppender">
        <file>${GSLOGFILENAME}testFile1.log</file>
        <encoder>
            <pattern>${GSPATTERN}</pattern>
        </encoder>
    </appender>
    <logger name="torsete.logback.ConfigurationTest$TestClass1" level="debug">
        <appender-ref ref="FILE1"/>
    </logger>

    <appender name="FILE2" class="ch.qos.logback.core.FileAppender">
        <file>${GSLOGFILENAME}testFile2.log</file>
        <encoder>
            <pattern>${GSPATTERN}</pattern>
        </encoder>
    </appender>
    <logger name="torsete.logback.ConfigurationTest$TestClass2" level="debug">
        <appender-ref ref="FILE2"/>
    </logger>

    <appender name="COMMON" class="ch.qos.logback.core.FileAppender">
        <file>${GSLOGFILENAME}.log</file>
        <encoder>
            <pattern>${GSPATTERN}</pattern>
        </encoder>
    </appender>
    <logger name="torsete.logback" level="warn">
        <appender-ref ref="COMMON"/>
    </logger>


</included>

